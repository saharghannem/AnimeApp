{% extends 'base.html.twig' %}

{% block title %}Genre Categories{% endblock %}

{% block stylesheets %}
<style>
    /* Styles pour la page des genres */
    .genre-section {
        padding: 50px 0;
        background-color: #0b0c2a;
        min-height: calc(100vh - 300px);
    }
    
    .genre-header {
        margin-bottom: 40px;
        text-align: center;
    }
    
    .genre-header h1 {
        color: #e53637;
        font-weight: 700;
        text-transform: uppercase;
        font-family: 'Oswald', sans-serif;
        letter-spacing: 1px;
        margin-bottom: 20px;
    }
    
    .genre-header p {
        color: #b7b7b7;
        max-width: 600px;
        margin: 0 auto;
    }
    
    .genre-table {
        background-color: #1c1c3a;
        border-radius: 10px;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.3);
        overflow: hidden;
    }
    
    .genre-table table {
        width: 100%;
        border-collapse: collapse;
        color: #ffffff;
    }
    
    .genre-table thead {
        background-color: #131335;
        border-bottom: 2px solid #e53637;
    }
    
    .genre-table th {
        padding: 15px 20px;
        text-transform: uppercase;
        font-weight: 600;
        color: #e53637;
        font-size: 14px;
        letter-spacing: 1px;
    }
    
    .genre-table td {
        padding: 15px 20px;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        font-size: 15px;
    }
    
    .genre-table tbody tr:hover {
        background-color: rgba(229, 54, 55, 0.1);
    }
    
    .genre-table .empty-message {
        text-align: center;
        padding: 40px 0;
        color: #b7b7b7;
        font-style: italic;
    }
    
    /* Styles pour les boutons d'action */
    .action-buttons {
        display: flex;
        gap: 10px;
    }
    
    .action-button {
        display: inline-block;
        padding: 6px 12px;
        border-radius: 4px;
        font-size: 13px;
        text-transform: uppercase;
        font-weight: 600;
        transition: all 0.3s ease;
    }
    
    .view-button {
        background-color: #131335;
        color: #fff;
    }
    
    .edit-button {
        background-color: #e53637;
        color: #fff;
    }
    
    .action-button:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
        color: #fff;
    }
    
    /* Style pour le bouton de cr√©ation */
    .create-button {
        display: inline-block;
        background-color: #e53637;
        color: #fff;
        padding: 12px 30px;
        border-radius: 5px;
        margin-top: 30px;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 1px;
        transition: all 0.3s ease;
    }
    
    .create-button:hover {
        background-color: #fff;
        color: #e53637;
        transform: translateY(-3px);
        box-shadow: 0 5px 15px rgba(229, 54, 55, 0.4);
    }
</style>
{% endblock %}

{% block body %}
<section class="genre-section">
    <div class="container">
        <div class="genre-header">
            <h1>Anime Genres</h1>
            <p>Discover and manage our collection of anime genre categories</p>
        </div>
        
        <div class="genre-table">
            <table>
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for genre in genres %}
                    <tr>
                        <td>{{ genre.id }}</td>
                        <td>{{ genre.name }}</td>
                        <td>{{ genre.descrition }}</td>
                        <td>
                            <div class="action-buttons">
                                <a href="{{ path('app_genre_show', {'id': genre.id}) }}" class="action-button view-button">
                                    <i class="fa fa-eye"></i> View
                                </a>
                                <a href="{{ path('app_genre_edit', {'id': genre.id}) }}" class="action-button edit-button">
                                    <i class="fa fa-edit"></i> Edit
                                </a>
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4" class="empty-message">No genres found. Start by creating a new genre category.</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        
        <div class="text-center">
            <a href="{{ path('app_genre_new') }}" class="create-button">
                <i class="fa fa-plus mr-2"></i> Add New Genre
            </a>
        </div>
    </div>
</section>
{% endblock %}
