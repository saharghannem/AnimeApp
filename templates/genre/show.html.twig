{% extends 'base.html.twig' %}

{% block title %}{{ genre.name }} Genre{% endblock %}

{% block stylesheets %}
<style>
    /* Styles pour la page de d√©tails de genre */
    .genre-detail-section {
        padding: 50px 0;
        background-color: #0b0c2a;
        min-height: calc(100vh - 300px);
    }
    
    .genre-detail-container {
        max-width: 800px;
        margin: 0 auto;
    }
    
    .genre-detail-header {
        text-align: center;
        margin-bottom: 40px;
    }
    
    .genre-detail-header h1 {
        color: #e53637;
        font-weight: 700;
        text-transform: uppercase;
        font-family: 'Oswald', sans-serif;
        letter-spacing: 1px;
        margin-bottom: 10px;
    }
    
    .genre-id {
        color: #b7b7b7;
        font-size: 14px;
    }
    
    .genre-detail-card {
        background-color: #1c1c3a;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.3);
    }
    
    .genre-info {
        padding: 30px;
    }
    
    .genre-info-row {
        margin-bottom: 25px;
    }
    
    .genre-info-label {
        color: #e53637;
        font-weight: 600;
        text-transform: uppercase;
        margin-bottom: 10px;
        letter-spacing: 1px;
        font-size: 14px;
    }
    
    .genre-info-value {
        color: #ffffff;
        font-size: 16px;
        line-height: 1.6;
        padding-left: 15px;
        border-left: 3px solid #e53637;
    }
    
    .genre-description {
        background-color: rgba(19, 19, 53, 0.5);
        padding: 20px;
        border-radius: 5px;
        margin-top: 10px;
    }
    
    /* Styles pour les boutons d'action */
    .genre-actions {
        display: flex;
        justify-content: space-between;
        padding: 20px 30px;
        background-color: #131335;
        border-top: 1px solid rgba(255, 255, 255, 0.1);
    }
    
    .action-links {
        display: flex;
        align-items: center;
        gap: 15px;
    }
    
    .back-button,
    .edit-button {
        display: inline-flex;
        align-items: center;
        gap: 5px;
        font-weight: 500;
        transition: all 0.3s ease;
    }
    
    .back-button {
        color: #b7b7b7;
    }
    
    .edit-button {
        color: #e53637;
    }
    
    .back-button:hover,
    .edit-button:hover {
        transform: translateY(-2px);
    }
    
    .delete-container {
        display: inline-block;
    }
    
    .delete-button {
        background-color: transparent;
        border: 1px solid #e53637;
        color: #e53637;
        padding: 8px 15px;
        border-radius: 5px;
        font-size: 13px;
        text-transform: uppercase;
        letter-spacing: 1px;
        transition: all 0.3s ease;
        cursor: pointer;
    }
    
    .delete-button:hover {
        background-color: #e53637;
        color: white;
    }
</style>
{% endblock %}

{% block body %}
<section class="genre-detail-section">
    <div class="container">
        <div class="genre-detail-container">
            <div class="genre-detail-header">
                <h1>{{ genre.name }}</h1>
                <div class="genre-id">ID: {{ genre.id }}</div>
            </div>
            
            <div class="genre-detail-card">
                <div class="genre-info">
                    <div class="genre-info-row">
                        <div class="genre-info-label">Name</div>
                        <div class="genre-info-value">{{ genre.name }}</div>
                    </div>
                    
                    <div class="genre-info-row">
                        <div class="genre-info-label">Description</div>
                        <div class="genre-info-value">
                            <div class="genre-description">
                                {{ genre.descrition }}
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="genre-actions">
                    <div class="action-links">
                        <a href="{{ path('app_genre_index') }}" class="back-button">
                            <i class="fa fa-arrow-left"></i> Back to list
                        </a>
                        <a href="{{ path('app_genre_edit', {'id': genre.id}) }}" class="edit-button">
                            <i class="fa fa-edit"></i> Edit
                        </a>
                    </div>
                    
                    <div class="delete-container">
                        {{ include('genre/_delete_form.html.twig') }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}
