<form method="post" action="{{ path('app_genre_delete', {'id': genre.id}) }}" onsubmit="return confirm('Are you sure you want to delete this genre? This action cannot be undone.');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ genre.id) }}">
    <button class="delete-button">
        <i class="fa fa-trash-o mr-1"></i> Delete
    </button>
</form>
