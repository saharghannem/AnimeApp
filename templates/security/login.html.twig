{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    :root {
        --primary-color: #e53637;
        --primary-dark: #d62f2f;
        --bg-dark: #0b0c2a;
        --text-light: #e0e0e0;
        --text-muted: #8c9fc5;
        --border-color: rgba(85, 90, 155, 0.4);
    }
    
    .auth-container {
        background-color: #0b0c2a;
        padding: 40px;
        border-radius: 16px;
        box-shadow: 0 4px 30px rgba(0, 0, 0, 0.7);
        margin-bottom: 50px;
        border: 1px solid rgba(85, 90, 155, 0.4);
        position: relative;
        overflow: hidden;
    }
    
    .auth-container::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 5px;
        background: linear-gradient(to right, #e53637, rgba(229, 54, 55, 0.2));
        z-index: 2;
    }
    
    .auth-title {
        color: #e0e0e0;
        margin-bottom: 40px;
        font-weight: 700;
        position: relative;
        display: inline-block;
        font-size: 2.2rem;
        letter-spacing: 1px;
        text-shadow: 0 2px 8px rgba(0,0,0,0.5);
        z-index: 1;
    }
    
    .auth-title:after {
        content: "";
        position: absolute;
        left: 0;
        bottom: -12px;
        width: 80px;
        height: 4px;
        background: linear-gradient(to right, var(--primary-color), rgba(229, 54, 55, 0.2));
        border-radius: 2px;
        transform-origin: left;
        transition: all 0.4s cubic-bezier(0.25, 0.8, 0.25, 1);
    }
    
    .auth-title:hover:after {
        width: 100%;
        background: linear-gradient(to right, var(--primary-color), var(--primary-light));
    }
    
    .form-control-pro {
        width: 100%;
        background-color: rgba(11, 12, 42, 0.8);
        border: 1px solid rgba(85, 90, 155, 0.4);
        border-radius: 8px;
        padding: 14px 20px;
        color: #e0e0e0;
        transition: all 0.4s cubic-bezier(0.25, 0.8, 0.25, 1);
        margin-bottom: 20px;
        font-size: 0.95rem;
        outline: none;
    }
    
    .form-control-pro:focus {
        background-color: rgba(20, 22, 60, 0.9);
        border-color: var(--primary-color);
        box-shadow: 0 0 0 3px rgba(229, 54, 55, 0.2);
        color: #e0e0e0;
        transform: translateY(-2px);
    }
    
    .form-label {
        color: var(--text-muted);
        font-weight: 500;
        margin-bottom: 10px;
        display: block;
        font-size: 0.95rem;
        letter-spacing: 0.5px;
    }
    
    .btn-auth {
        background: linear-gradient(135deg, #e53637, #d62f2f);
        color: #f0f0f0;
        border: none;
        padding: 14px 32px;
        border-radius: 8px;
        font-weight: 600;
        transition: all 0.4s cubic-bezier(0.25, 0.8, 0.25, 1);
        box-shadow: 0 4px 20px rgba(229, 54, 55, 0.3);
        text-transform: uppercase;
        letter-spacing: 1px;
        font-size: 0.9rem;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        margin-top: 10px;
        cursor: pointer;
        width: 100%;
    }
    
    .btn-auth:hover {
        transform: translateY(-3px);
        box-shadow: 0 8px 25px rgba(229, 54, 55, 0.5);
        background: linear-gradient(135deg, #f04e4e, #e53637);
    }
    
    .btn-auth i {
        margin-right: 10px;
    }
    
    .form-help-text {
        color: var(--text-muted);
        font-size: 0.85rem;
        margin-top: 20px;
        text-align: center;
    }
    
    .form-help-text a {
        color: var(--primary-color);
        text-decoration: none;
        font-weight: 500;
        transition: all 0.3s;
    }
    
    .form-help-text a:hover {
        color: var(--primary-dark);
        text-decoration: underline;
    }
    
    .alert {
        padding: 15px;
        border-radius: 8px;
        margin-bottom: 20px;
        position: relative;
        background: rgba(220, 53, 69, 0.1);
        border: 1px solid rgba(220, 53, 69, 0.3);
        color: #e77681;
    }
    
    .alert-icon {
        margin-right: 10px;
    }
    
    .auth-footer {
        margin-top: 30px;
        text-align: center;
        color: var(--text-muted);
        font-size: 0.9rem;
    }
    
    .auth-footer a {
        color: var(--primary-color);
        text-decoration: none;
    }
    
    .auth-footer a:hover {
        text-decoration: underline;
    }
    
    .form-check {
        display: flex;
        align-items: center;
        margin-bottom: 15px;
    }
    
    .form-check-input {
        margin-right: 10px;
        appearance: none;
        width: 20px;
        height: 20px;
        background-color: rgba(11, 12, 42, 0.8);
        border: 1px solid rgba(85, 90, 155, 0.4);
        border-radius: 4px;
        transition: all 0.3s;
        position: relative;
        cursor: pointer;
    }
    
    .form-check-input:checked {
        background-color: var(--primary-color);
        border-color: var(--primary-color);
    }
    
    .form-check-input:checked::after {
        content: '✓';
        position: absolute;
        color: white;
        font-size: 14px;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
    }
    
    .form-check-label {
        color: var(--text-muted);
        font-size: 0.9rem;
        cursor: pointer;
    }
</style>
{% endblock %}

{% block body %}
<section class="product spad">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <div class="auth-container">
                    <h1 class="auth-title">Connexion</h1>
                    
                    {% if error %}
                        <div class="alert">
                            <i class="fa fa-exclamation-circle alert-icon"></i>
                            {{ error.messageKey|trans(error.messageData, 'security') }}
                        </div>
                    {% endif %}
                    
                    <form method="post">
                        <div class="mb-3">
                            <label for="inputEmail" class="form-label">Email</label>
                            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control-pro" placeholder="Votre adresse email" required autofocus>
                        </div>
                        
                        <div class="mb-3">
                            <label for="inputPassword" class="form-label">Mot de passe</label>
                            <input type="password" name="password" id="inputPassword" class="form-control-pro" placeholder="Votre mot de passe" required>
                        </div>
                        
                        <div class="form-check">
                            <input type="checkbox" name="_remember_me" id="rememberMe" class="form-check-input">
                            <label for="rememberMe" class="form-check-label">Se souvenir de moi</label>
                        </div>
                        
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                        
                        <button class="btn-auth" type="submit">
                            <i class="fa fa-sign-in-alt"></i> Se connecter
                        </button>
                        
                        <div class="form-help-text">
                            <p>Vous n'avez pas de compte ? <a href="{{ path('app_register') }}">Inscrivez-vous</a></p>
                        </div>
                    </form>
                    
                    <div class="auth-footer">
                        <p>© 2025 Anime Management | <a href="#">Conditions d'utilisation</a> | <a href="#">Politique de confidentialité</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}
